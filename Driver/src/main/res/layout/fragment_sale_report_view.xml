                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/background_progress_bar"
                                    android:max="100"
                                    android:padding="2dp"
                                    android:progressDrawable="@drawable/custom_progress_bar" />

                                <ProgressBar
                                    android:id="@+id/progressBar4"
                                    style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/background_progress_bar"
                                    android:max="100"
                                    android:padding="2dp"
                                    android:progressDrawable="@drawable/custom_progress_bar" />

                                <ProgressBar
                                    android:id="@+id/progressBar5"
                                    style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/background_progress_bar"
                                    android:max="100"
                                    android:padding="2dp"
                                    android:progressDrawable="@drawable/custom_progress_bar" />

                                <ProgressBar
                                    android:id="@+id/progressBar6"
                                    style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/background_progress_bar"
                                    android:max="100"
                                    android:padding="2dp"
                                    android:progressDrawable="@drawable/custom_progress_bar" />

                                <ProgressBar
                                    android:id="@+id/progressBar7"
                                    style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:layout_marginTop="@dimen/_4sdp"
                                    android:layout_weight="1"
                                    android:background="@drawable/background_progress_bar"
                                    android:max="100"
                                    android:padding="2dp"
                                    android:progressDrawable="@drawable/custom_progress_bar" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="340"
                                android:orientation="vertical"
                                android:weightSum="7">

                                <TextView
                                    android:id="@+id/tvTotalMoney1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_12sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:gravity="left"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/tvTotalMoney2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_12sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:gravity="left"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/tvTotalMoney3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_12sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:gravity="left"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/tvTotalMoney4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_12sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:gravity="left"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/tvTotalMoney5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_12sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:gravity="left"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/tvTotalMoney6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_12sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:gravity="left"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_13sdp" />

                                <TextView
                                    android:id="@+id/tvTotalMoney7"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/_12sdp"
                                    android:layout_weight="1"
                                    android:ellipsize="marquee"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:gravity="left"
                                    android:marqueeRepeatLimit="marquee_forever"
                                    android:scrollHorizontally="true"
                                    android:singleLine="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/_13sdp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <ListView
                        android:id="@+id/listProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dividerHeight="0dp"
                        android:visibility="invisible" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="796"
            android:orientation="horizontal"
            android:weightSum="640">

            <FrameLayout
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="416"
                android:background="@drawable/background_orange">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/arow_left_black" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="#d5ad4c" />
            </FrameLayout>

            <TextView
                android:id="@+id/btnShowBestSale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="224"
                android:background="@drawable/background_orange"
                android:gravity="center"
                android:text="@string/show_my_best_sales"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_18sdp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
