<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1006"
    tools:context="bhtech.com.cabbydriver.Sales.SaleReportByWeekView">

    <TextView
        android:id="@+id/tvDriverName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="898"
        android:background="#efd152"
        android:gravity="center"
        android:text="Mr Han"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_23sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="108"
        android:orientation="vertical"
        android:weightSum="898">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="102"
            android:orientation="vertical"
            android:weightSum="796">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="693">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/background_gradient_gray2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <FrameLayout
                        android:id="@+id/btnDay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_no_background_gray_border_radius_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text="Day"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_13sdp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:src="@drawable/arrow_down" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnWeek"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_no_background_gray_border_radius_15">

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteWeek"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@+id/tvChooseWeek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:text="Week"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_13sdp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:src="@drawable/arrow_down" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnMonth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_no_background_gray_border_radius_15">

                        <AutoCompleteTextView
                            android:id="@+id/autoCompleteMonth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:text="Month"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:src="@drawable/arrow_down" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/btnDateRange"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle_no_background_gray_border_radius_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="Range"
                            android:textAllCaps="true"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_7sdp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:src="@drawable/arrow_down" />
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="103"
                android:orientation="vertical"
                android:weightSum="693">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="335"
                    android:orientation="vertical"
                    android:weightSum="358">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="288">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tvTotalType"
