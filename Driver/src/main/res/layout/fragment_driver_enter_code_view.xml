<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/driver_splash_background_gradient"
    tools:context=".EnterPinCode.EnterCodeView">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginTop="@dimen/_65sdp"
        android:background="@drawable/driver_splash_background_map">

    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:src="@drawable/driver_splash_icon_cung" />

            <ImageView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="13dp"
                android:src="@drawable/driver_splash_logo_cabby" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/enter_pin_code"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="ID Cabby"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_20sdp" />

        <FrameLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_28sdp"
            android:background="@drawable/rectangle_no_background_white_border_radius_10">

            <EditText
                android:id="@+id/etEnterCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#00000000"
                android:gravity="center"
                android:inputType="numberPassword"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20sdp">

                <requestFocus />
            </EditText>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/cbRememberMe"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_5sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/login_checkbox" />

                <ImageView
                    android:id="@+id/ivUnCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_2sdp"
                    android:src="@drawable/login_checkbox_tick"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/remember_me"
                android:textColor="#c49635"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
